<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/3.3.0"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/3.3.0 http://maven.apache.org/xsd/assembly-3.3.0.xsd">
    <id>package</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <!--把启动脚本打包到bin目录-->
        <fileSet>
            <directory>bin</directory>
            <outputDirectory>./bin</outputDirectory>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <!--把配置文件打包到conf目录-->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>./conf</outputDirectory>
            <excludes>
                <exclude>generate.xml</exclude>
                <exclude>sm2/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>./conf</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>sm2/*</include>
            </includes>
        </fileSet>
        <!--把lib依赖打包到lib目录-->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>./lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!--创建extlib用于每个项目个性化的jar包-->
        <fileSet>
            <outputDirectory>extlib</outputDirectory>
            <fileMode>755</fileMode>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <!--建立日志目录-->
        <fileSet>
            <outputDirectory>logs</outputDirectory>
            <fileMode>755</fileMode>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <!--建立临时目录-->
        <fileSet>
            <outputDirectory>tmp</outputDirectory>
            <fileMode>755</fileMode>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>
